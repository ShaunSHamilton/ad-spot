{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ad Spot",
  "version": "0.1.0",
  "identifier": "com.ad-spot.app",
  "build": {
    "frontendDist": "../frontend",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Ad Spot",
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}